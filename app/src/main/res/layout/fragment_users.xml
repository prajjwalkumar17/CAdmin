<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.organisationinfo.Users">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_org_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <!-- <Button
        android:id="@+id/btn_add_org_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/fui_transparent"
        android:text="No user found add user here >>"
        />  -->

    <ImageView
        android:id="@+id/org_imageView_users"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/org_tv_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org_imageView_users"
        android:fontFamily="@font/roboto"
        android:padding="4dp"
        android:text="No User Added Yet !"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="gone" />

</RelativeLayout>