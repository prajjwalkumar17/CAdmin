<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.TemperatureConverter"
    tools:showIn="@layout/activity_temperature_converter">

    <TextView
        android:id="@+id/item1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgcrd"
        android:editable="false"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingBottom="5dp"
        android:textColor="#000" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/item1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:entries="@array/temperature" />

    <TextView
        android:id="@+id/item2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgcrd"
        android:editable="false"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingBottom="5dp"
        android:textColor="#000" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/item2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:entries="@array/temperature" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/num7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="8"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="9"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/num4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:nestedScrollingEnabled="true"
                    android:onClick="onClick"
                    android:text="4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="5"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="6"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/num1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/num3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="3"
                    android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/num0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="0"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/dot"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="."
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/backSpace"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:onClick="onClick"
                    android:text="@string/backspace"
                    android:textSize="30sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3F52BC"
                android:onClick="onClick"
                android:text="@string/clear"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/colorNumBtnText"
                android:onClick="onClick"
                android:text="="
                android:textColor="#fff"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
